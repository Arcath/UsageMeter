<table>
	<tr>
		<th>Hostname</th>
		<th>Downloads</th>
		<th>Uploads</th>
	</tr>
	<% @devices.each do |device| %>
	<% if device.usage_for_month %>
		<tr>
			<td><%= link_to device.hostname, device %></td>
			<td><%= render_ammount(device.usage_for_month[0]) %></td>
			<td><%= render_ammount(device.usage_for_month[1]) %></td>
		</tr>
		<% @total_in += device.usage_for_month[0] %>
		<% @total_out += device.usage_for_month[1] %>
	<% end %>
	<% end %>
	<tr>
		<th>Total</th>
		<th><%= render_ammount(@total_in) %></th>
		<th><%= render_ammount(@total_out) %></th>
	</tr>
</table>
